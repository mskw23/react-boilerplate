{
	"compilerOptions": {
		"outDir": "./build/",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es2015",
		"jsx": "react",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"baseUrl": "./",
		"suppressImplicitAnyIndexErrors": true,
    "strict": true,
		"paths": {
			"components/*": ["src/app/components/*"],
			"ducks/*": ["src/app/redux/ducks/*"],
			"utils": ["src/utils.ts"]
		}
	},
	"include": ["./src/**/*"]
}
